@using Ricky.Infrastructure.Core
@using VnStyle.Web.Infrastructure.Helpers
@model Ricky.Infrastructure.Core.IPagedList<VnStyle.Services.Business.Models.ArticleListingModel>
    

@foreach (var article in Model)
{
    <div class="nlg-col">
        <article class="nlg-entry nlg-entry-horizontal nlg-entry-has-featured-media post-171 post type-post status-publish format-standard has-post-thumbnail hentry category-self-help tag-marriage tag-relationship"
                 style="padding-top: 0px;">
            <figure class="nlg-featured-media">
                <a href="@Url.HostAction("Detail","Home",new { id = article.Id, title = CommonHelper.FriendlyUrl(article.HeadLine) })">
                    <img width="267" height="176" src="@article.UrlImage" class="attachment-nlg-267-176 size-nlg-267-176 agg-fade-in lazyloaded">
                </a>
                <div class="nlg-entry-flags">
                    <span class="nlg-flag nlg-flag-red nlg-flag-circle nlg-flag-trending"><i class="fa fa-bolt"></i></span>
                </div>

            </figure>
            <div class="nlg-entry-body">
                <ul class="nlg-entry-meta first no-spacing">

                    <li class="nlg-date">
                        <a href="@Url.HostAction("Detail","Home",new { id = article.Id, title = CommonHelper.FriendlyUrl(article.HeadLine) })">
                            @article.PushlishDate
                        </a>
                    </li>
                </ul>
                <header class="nlg-entry-header">
                    <h3 class="nlg-entry-title">
                        <a href="@Url.HostAction("Detail","Home",new { id = article.Id, title = CommonHelper.FriendlyUrl(article.HeadLine)})">@article.HeadLine</a>
                    </h3>

                    <p class="nlg-entry-excerpt">@article.Extract</p>
                </header>
            </div>
        </article>
    </div>
}
