@model IList<VnStyle.Services.Business.Models.VideoListingModel>
<div id="nlg-module-610ad9a3-e92c" class="nlg-module nlg-module-grid-posts">
    <div class="container">

        <div class="nlg-module-header nlg-has-tax-nav">
            <div class="nlg-module-title">
                <h2 class="nlg-title">XamTV</h2>
            </div>

        </div>

        <div class="nlg-col-wrap nlg-col-2">
                @foreach (var imgThumb in Model)
                {
                    <div class="nlg-col">
                        <article class="nlg-entry nlg-entry-horizontal nlg-entry-has-featured-media post-379 post type-post status-publish format-video has-post-thumbnail hentry category-self-help tag-effective tag-relaxed post_format-post-format-video"
                                 style="padding-top: 0px;">
                            <figure class="nlg-featured-media">
                                <a  onclick="loadVideo('@imgThumb.Link')">
                                    <img width="144" height="95" src="http://i3.ytimg.com/vi/@imgThumb.Link/maxresdefault.jpg" class="attachment-nlg-144-95 size-nlg-144-95 lazyload agg-fade-in" alt="88">
                                </a>
                                <div class="nlg-entry-flags">
                                </div>
                                <div class="nlg-media-icon" onclick="loadVideo('@imgThumb.Link')"><i class="fa fa-play"></i></div>
                                <!-- Modal -->
                                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <iframe id="iframeYoutube" width="100%" height="315" src="https://www.youtube.com/embed/@imgThumb.Link" frameborder="0" allowfullscreen></iframe>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </figure>
                            <div class="nlg-entry-body">
                                <ul class="nlg-entry-meta first no-spacing">
                                    <li class="nlg-byline">
                                        by <span class="nlg-entry-author" itemscope="" itemtype="http://schema.org/Person">
                                            <a target="_blank" href="https://www.youtube.com/channel/UCfazwxHB6usZ4FOa2-LFaBQ" rel="author"><span itemprop="author">VNStyleTattooTV</span></a>
                                        </span>
                                    </li>
                                </ul>
                                <header class="nlg-entry-header">
                                    <h3 class="nlg-entry-title" ><a onclick="loadVideo('@imgThumb.Link')">@imgThumb.Title</a></h3>
                                    <ul class="nlg-entry-meta"></ul>

                                </header>
                            </div>
                        </article>
                    </div>
                }
            
           
            <div class="nlg-pagination nlg-pagination-loadmore"><span data-href="http://demo.aggressivemotions.com/newslog/page/2/" class="btn" data-load-page="2"><i class="fa fa-circle-o-notch"></i>Load More</span></div>
            
        </div>

    </div>
</div>


